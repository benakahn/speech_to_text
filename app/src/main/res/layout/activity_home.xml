<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ise"/>
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech To Text Recognization"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/img"
        android:textStyle="bold|italic"
        android:textSize="45dp"/>
    <TextView
        android:id="@+id/t2"
        android:layout_below="@+id/t1"
        android:layout_marginTop="75dp"
        android:text="Features :"
        android:textSize="35dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1)Speech that has been converted into text is available to copy and be used anywhere."
            android:layout_below="@id/t2"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2)Form also contains validation to ensure values with incorrect format are not accepted"
            android:layout_below="@id/t3"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/t5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3)Accent of different languages is taken into account"
            android:layout_below="@id/t4"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/t6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4)Support for all Indian languages and some foreign languages"
            android:layout_below="@id/t5"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/t9"
            android:layout_below="@+id/t6"
            android:layout_marginTop="50dp"
            android:text="By :"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t9"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:text="Benaka H N"/>
    </RelativeLayout>
</ScrollView>